<div id="sidebar" >
  <center>
   <% if !user_signed_in? %>
      <li>
         <%= link_to "Home",    root_path %>
      </li>
   <% else %>
      <% if current_user.role_id == 1 %>
      <li>
         <%= link_to "My profile",   fan_path(current_user.role.name, current_user) %>
      </li>
      <% elsif current_user.role_id == 2 %>
      <li>
         <%= link_to "My profile",   artist_path(current_user.role.name, current_user) %>
      </li>
      <% else%>

      <% end%>
   	  <li>
         <%= link_to "Home",    home_path %>
      </li>
      <% if current_page?(home_path) || current_page?(popular_path) || current_page?(country_path) || current_page?(genre_path)%>
       <ul id="search">
          <li><a href="#">Search</a></li>
            <ul>
             <li><%= link_to 'Most Popular','#popular', :onclick => 'popularload();' %></li>
             <li><%= link_to 'Genre',       '#genre',   :onclick => 'genreload();' %></li>
              <li><%= link_to 'Country', '#country', :onclick => 'countryload();' %></li>
            </ul>
          </li>
      </ul>
      <% end %>
   <% end %>
  </center>
</div>
